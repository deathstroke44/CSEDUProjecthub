<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:paddingTop="16dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/pic"
        android:src="@drawable/nightwing"/>
    <TextView
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name: Nightwing"
        android:textStyle="bold"
        android:textSize="@dimen/fab_margin"
        android:layout_below="@+id/pic"
        android:id="@+id/t1"/>
        <TextView
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year/Session: 2018-19"
            android:textStyle="bold"
            android:textSize="@dimen/fab_margin"
            android:layout_below="@+id/t1"
            android:id="@+id/t2"/>
        <TextView
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Designetion: Lecturer"
            android:textStyle="bold"
            android:textSize="@dimen/fab_margin"
            android:layout_below="@+id/t2"
            android:id="@+id/t3"/>
        <TextView
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topics: Quantum Computing"
            android:textStyle="bold"
            android:textSize="@dimen/fab_margin"
            android:layout_below="@+id/t3"
            android:id="@+id/t4"/>
        <TextView
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mail: redhat@gmail.com"
            android:textStyle="bold"
            android:textSize="@dimen/fab_margin"
            android:layout_below="@+id/t4"
            android:id="@+id/t5"/>

    </RelativeLayout>
    </ScrollView>
</FrameLayout>